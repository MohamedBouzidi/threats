%h1.page-header Reports
.row
  .col-md-12
    .panel.panel-default
      .panel-heading Risks
      .panel-body
        / %svg#pie{ "width": "960", "height": "500"}
.row
  .col-md-12
    .panel.panel-default
      .panel-heading Threat History
      .panel-body
        .table-responsive
          %table.table
            %thead
              %tr
                %th Name
                %th Description
                %th Risk
                %th Discovered
                %th Type
            %tbody.threats-container
            - @threats.each do |threat|
              %tr{ class: 'record', 'data-id': threat.id }
                %td= threat.name
                %td= threat.description
                %td= threat.risk
                %td= threat.date_discovered.strftime("%D")
                %td= threat.type.name
        .loading-animation
          = image_tag 'loading.gif', style: 'display: none', class: 'loading-gif'
          